<div class="card mb-5">
    <div class="card-header bg-secondary">
        <h4 class="card-title"><a class="text-white" href="/post/{{post.id}}">{{post.title}}</a></h4>        
    </div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
    <div>
        <b>Posted by {{user.name}}</b> 
        on {{format_date created_at}} | <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</div>

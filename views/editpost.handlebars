<div>
  {{#if (compare_users session.user_name post.user.name)}}
  <a href="/dashboard"> &larr; Back to Dashboard</a>
  <h2 class="title mt-5">Edit Post</h2><hr>
  <form class="edit-post-form">
    <div class="form-group">
      <label for="post-title"><strong>Title:</strong></label>        
      <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
    </div>
     <div class="form-group">
        <label for="post-content"><strong>Content:</strong></label>        
        <textarea class="form-control" name="post-content" rows="15">{{post.content}} </textarea>
    </div> 

    <div> created on {{format_date post.created_at}}
      |<a> {{post.comments.length}} {{format_plural "comment" post.comments.length}}</a>
    </div>
    <button type="submit" class="button btn-primary extra-margin">Save Post</button>
    <button type="button" class="button btn-primary extra-margin delete-post-btn">Delete Post</button>
  </form>
</div>

<div class="comments">
  {{#each post.comments as |comment|}} 
  <section class="comment">
    <div class="meta">
      {{user.name}} commented on {{format_date created_at}}
    </div>
    <div class="text">
      {{comment.comment_text}}
    </div>
  </section>
  {{/each}}
</div>
<form class="comment-form">
  <div class="form-group">
    <textarea class="form-control" name="comment-body" rows="3"></textarea>
  </div>
  <div>
    <button class="button btn-primary extra-margin" type="submit">Add Comment</button>
  </div>  
</form>
<script src="/js/editpost.js"></script>
<script src="/js/deletepost.js"></script>
<script src="/js/comment.js"></script>
{{else}}
{{> addcomments}}

{{/if}}

<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="card mb-5">
    <div class="card-header bg-secondary">
        <h4 class="card-title"><a class="text-white" href="/post/{{post.id}}">{{post.title}}</a></h4>
        <h6 class="card-subtitle mb-2 text-light">Posted by {{user.name}}</h6>
    </div>
    <div class="card-body">
        <p class="card-text">{{post.content}}</p>
    </div>
</div>

{{/each}}